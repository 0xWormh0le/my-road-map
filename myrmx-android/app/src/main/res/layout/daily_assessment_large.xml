<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/notif_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:id="@+id/notif_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notif_title"
        android:layout_marginBottom="5px"
        android:maxHeight="125px"
        android:text="TextView" />

    <Button
        android:id="@+id/red_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/yellow_button"
        android:background="@android:color/holo_red_light"
        android:minHeight="75px"
        android:text="Button" />

    <Button
        android:id="@+id/yellow_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/green_button"
        android:layout_marginBottom="10px"
        android:background="@android:color/holo_orange_light"
        android:minHeight="75px"
        android:text="Button" />

    <Button
        android:id="@+id/green_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notif_description"
        android:layout_marginBottom="10px"
        android:background="@android:color/holo_green_light"
        android:minHeight="75px"
        android:text="Button" />

</RelativeLayout>
